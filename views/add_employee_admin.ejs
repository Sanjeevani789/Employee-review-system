<!-- Form for adding a new employee -->
<form class="w-50 mx-auto mt-4 p-5" action="/admin/add-employee" method="post">
    <!-- Section for employee details -->
    <div class="mb-3">
        <h3>Add Employee</h3>
        <!-- Input field for employee name -->
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Name" required />
    </div>

    <!-- Input field for employee email -->
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" placeholder="Email" name="email" required />
    </div>

    <!-- Input field for employee password -->
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Password" name="password" required />
    </div>

    <!-- Input field for confirming employee password -->
    <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" name="confirmPassword" required />
    </div>

    <!-- Button to submit the form -->
    <button class="btn btn-primary align-self-center">Create Employee</button>
</form>
