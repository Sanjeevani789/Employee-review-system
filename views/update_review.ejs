<form class="w-50 mx-auto mt-4 p-5" action="/admin/update-review/<%= review.id %>" method="post">
    <!-- Heading for adding review -->
    <h4>Add Review for Employee</h4>

    <!-- Dropdown for selecting employee (disabled and pre-selected) -->
    <select class="form-select" disabled name="employee">
        <option value="" selected><%= review.to.name %></option>
    </select>

    <!-- Textarea for entering review content -->
    <div class="form-group mt-3">
        <textarea class="form-control" required rows="3" name="review" placeholder="Give your review"><%= review.review %></textarea>
    </div>

    <!-- Buttons for resetting and submitting the form -->
    <div class="form-group mt-3 text-center">
        <button type="reset" class="btn btn-danger">Reset</button>
        <button type="submit" class="btn btn-success">Submit Feedback</button>
    </div>
</form>
