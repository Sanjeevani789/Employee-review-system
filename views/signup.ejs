<div class="w-50 mx-auto mt-5" style="padding: 20px">
    <!-- Sign Up heading -->
    <div class="mx-auto mt-3 mb-4" style="width: 200px">
        <h4>Sign Up</h4>
    </div>
    <div class="mb3">
        <!-- Sign Up form -->
        <form action="/employee/create" method="post">

            <!-- Name input -->
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Name" required />
    </div>

    <!-- Email input -->
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" placeholder="Email" name="email" required />
    </div>

    <!-- Password input -->
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" placeholder="password" name="password" required />
    </div>

    <!-- Confirm Password input -->
    <div class="mb-3">
        <label for="Password" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPassword" placeholder="confirm password" name="confirmPassword" required />
    </div>

    <!-- Sign Up button -->
    <div class="mb-4 mt-3" style="display: flex; justify-content: center">
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </div>
    </form>

    <!-- Log in link -->
    <div class="mx-auto mb-3 mt-3" style="width: 300px">
        <a href="/employee/signin" style="margin-left: 100px">Log in Instead</a>
    </div>
</div>
