<div class="w-75 mx-auto mt-5">
    <!-- Header row with title and add review button -->
    <div class="row">
        <div class="col-6">
            <h1>Review List</h1>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <a href="/admin/add-review" type="button" class="align-self-center">Add a new Review</a>
        </div>
    </div>

    <!-- Check if there are reviews to display -->
    <%if(reviews.length> 0){%>
    <div class="mt-3 mb-3">
        <!-- Table for displaying reviews -->
        <table class="table">
            <!-- Table header with column names -->
            <thead class="bg-primary text-light">
                <tr>
                    <th scope="col">Index</th>
                    <th scope="col">Employee</th>
                    <th scope="col">Reviewer</th>
                    <th scope="col">Review</th>
                    <th scope="col">Reviewed At</th>
                    <th scope="col">Make Changes</th>
                </tr>
            </thead>
            <!-- Counter variable for index -->
            <%i=1%>
            <!-- Loop through each review to populate the table -->
            <% for(let review of reviews){%>
            <!-- Table body with review details -->
            <tbody>
                <tr>
                    <th scope="row">
                        <%=i++%>
                    </th>
                    <td>
                        <%=review.to.name%>
                    </td>
                    <td>
                        <%=review.from.name%>
                    </td>
                    <td>
                        <%=review.review%>
                    </td>
                    <td>
                        <!-- Display the time since the review was created -->
                        <%= moment(review.createdAt).fromNow()%>
                    </td>
                    <td>
                        <!-- Buttons for editing and deleting the review -->
                        <a href="/admin/update-review/<%=review.id%>" type="button" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-review/<%=review.id%>" type="button" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            </tbody>
            <%}%>
            </table>
        </div>
        <%}else{%>
            <!-- Display message if there are no reviews -->
            <div class="w-75 mx-auto mt-5">
                <h2>Nothing to show</h2>
            </div>
            <%}%>
</div>