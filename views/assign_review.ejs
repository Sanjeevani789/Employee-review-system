<!-- Container for assigning reviews and making admin -->
<div class="d-flex justify-content-around text-center">

    <!-- Section for assigning reviews to employees -->
    <div class="mt-5 pt-5">
        <div class="mx-auto mt-3 p-3">
            <h2>Assign Review to Employee</h2>
        </div>

        <!-- Form for assigning reviews -->
        <div class="m-4 p-4">
            <form action="/admin/assign-review" method="post">
                <!-- Dropdown for selecting the employee to be reviewed -->
                <div class="mb-4">
                    <h4>Employee</h4>
                    <select class="form-select" name="employee">
                        <!-- Iterate through every user from req.user to populate dropdown options -->
                        <% for(user of users){ %>
                            <option value="<%= user.id %>">
                                <%= user.name %>
                            </option>
                        <% } %>
                    </select>
                </div>

                <!-- Dropdown for selecting the reviewer -->
                <div>
                    <h4>Reviewer</h4>
                    <select class="form-select" name="reviewer">
                        <!-- Iterate through every user from req.user to populate dropdown options -->
                        <% for(user of users){ %>
                            <option value="<%= user.id %>">
                                <%= user.name %>
                            </option>
                        <% } %>
                    </select>
                </div>

                <!-- Button to submit the form and assign the review -->
                <div>
                    <button type="submit" class="btn btn-dark mt-5">Assign</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Vertical divider -->
    <div class="vr"></div>

    <!-- Section for making an employee an admin -->
    <div class="mt-5 pt-5">
        <div class="mx-auto mt-3">
            <h2>Make Admin</h2>
        </div>

        <!-- Form for making an employee an admin -->
        <div class="m-4 p-4">
            <form action="/admin/make-admin" method="post">
                <!-- Dropdown for selecting the employee to be made an admin -->
                <select class="form-select" aria-label="Default select example" name="adminName">
                    <!-- Iterate through every user from req.user to populate dropdown options -->
                    <% for(user of users){ %>
                        <option value="<%= user.id %>">
                            <%= user.name %>
                        </option>
                    <% } %>
                </select>
                <!-- Button to submit the form and make the selected employee an admin -->
                <div class="mt-5">
                    <button type="submit" class="btn-sm btn-dark">
                        Make Admin
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
